<div class= "container">
<div class= "row">
<div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
<h2>User info</h2>
<% if @user.errors.any? %>
  <%= @user.errors.count %>errors prohibited this obj from being saved:
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<%= form_with model: @user do |f| %>
  <p>
  <label for="inputName">Name</label>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"name"%>
  </p>
  <p>
  <label for="inputImage">Image</label>
  <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
  </p>
  <p>
  <label for="inputName">Introduction</label>
  <%= f.text_field :introduction, autofocus: true, id:"inputName", placeholder:"introduction"%>
  </p>
  <%= f.submit "Update User" %>
<% end %>
</div>
</div>
</div>