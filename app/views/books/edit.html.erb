<div class= "container">
<div class= "row">
<div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
<h2>Editing Book</h2>
<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this obj from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<%= form_with model: @book do |f| %>
  <p>
  <label for="inputTitle">Title</label>
  <%= f.text_field :title, autofocus: true, id:"inputTitle" %>
  </p>
  <p>
  <label for="inputBody">Opinion</label><br/>
  <%= f.text_field :body, autofocus: true, id:"inputBody" %>
  </P>
  <%= f.submit "Update Book" %>
  <p>
  <tr>
  <th><%= link_to "Show", book_path %>|
  <th><%= link_to "Back", books_path %></th>
  </tr>
  </p>
<% end %>
</div>
</div>
</div>